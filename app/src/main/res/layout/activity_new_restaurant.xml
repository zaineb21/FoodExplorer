<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewRecipeActivity">

    <!--edit text for our course name-->
    <EditText
        android:id="@+id/idEdtRestName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Restaurant Name" />

    <!--edit text for our course description-->
    <EditText
        android:id="@+id/idEdtRestType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Type" />

    <!--edit text for course description-->
    <EditText
        android:id="@+id/idEdtRestAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Adress" />

    <!--button for saving data to room database-->
    <Button
        android:id="@+id/idBtnSaveRest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Save your restaurant"
        android:textAllCaps="false" />

</LinearLayout>
